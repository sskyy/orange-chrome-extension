{
  "name": "react-chrome-extension-boilerplate",
  "version": "0.5.0",
  "description": "Boilerplate for Chrome extension React.js project",
  "scripts": {
    "dev": "gulp",
    "build": "gulp build",
    "compress": "npm run build && crx pack build --zip-output react-crx.zip -o react-crx.crx",
    "clean": "rimraf build/ dev/ *.zip *.crx",
    "test-crdv": "chromedriver",
    "test:eslint": "eslint .",
    "test:app": "mocha --recursive --compilers js:babel-core/register test/app",
    "test:e2e": "npm run build && mocha --recursive --compilers js:babel-core/register -r co-mocha test/e2e",
    "test": "npm run test:eslint && npm run test:app && npm run test:e2e"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jhen0409/react-chrome-extension-boilerplate"
  },
  "homepage": "https://github.com/jhen0409/react-chrome-extension-boilerplate",
  "keywords": [
    "react",
    "reactjs",
    "boilerplate",
    "hot",
    "live",
    "edit",
    "webpack",
    "redux",
    "chrome",
    "extension"
  ],
  "author": "Jhen <developer@jhen.me>",
  "license": "MIT",
  "devDependencies": {
    "babel": "^5.8.21",
    "babel-core": "^5.8.22",
    "babel-eslint": "^4.0.10",
    "babel-loader": "^5.3.2",
    "babel-plugin-react-transform": "^1.1.1",
    "chai": "^3.2.0",
    "chromedriver": "^2.19.0",
    "co-mocha": "^1.1.2",
    "crx": "^3.0.3",
    "eslint": "^1.1.0",
    "eslint-config-airbnb": "0.0.7",
    "eslint-plugin-react": "^3.2.3",
    "gulp": "^3.9.0",
    "gulp-jade": "^1.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-util": "^3.0.5",
    "jsdom": "^6.5.1",
    "mocha": "^2.2.5",
    "mocha-jsdom": "^1.0.0",
    "raw-loader": "^0.5.1",
    "react-transform-catch-errors": "^1.0.0",
    "react-transform-hmr": "^1.0.1",
    "redbox-react": "^1.0.1",
    "rimraf": "^2.4.3",
    "selenium-webdriver": "^2.47.0",
    "sinon": "^1.17.1",
    "style-loader": "^0.12.3",
    "webpack": "^1.11.0",
    "webpack-dev-server": "^1.10.1"
  },
  "dependencies": {
    "bluebird": "^2.10.1",
    "classnames": "^2.1.3",
    "co": "^4.6.0",
    "react": "^0.13.3",
    "react-redux": "^3.0.1",
    "redux": "^3.0.2",
    "redux-devtools": "^2.1.5",
    "redux-thunk": "^1.0.0",
    "todomvc-app-css": "^2.0.1"
  }
}
